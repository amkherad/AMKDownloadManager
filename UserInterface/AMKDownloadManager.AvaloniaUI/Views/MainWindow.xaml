<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AMKDownloadManager.AvaloniaUI.ViewModels;assembly=AMKDownloadManager.AvaloniaUI"
        Icon="resm:AMKDownloadManager.AvaloniaUI.Assets.avalonia-logo.ico"
        Title="{Binding HelloWorld}"
        Background="Black"
        >

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>
  
  <TextBlock Text="{Binding HelloWorld}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
  
</Window>